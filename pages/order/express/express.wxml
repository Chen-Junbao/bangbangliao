<view style="margin-bottom: 3rpx;">
    <block wx:for="{{deliveryInfo}}">
        <view style="margin: 1rpx rpx 0 rpx; padding-bottom: 1rpx; background: #f9f9f9;">
            <van-row>
                <van-col span="2">
                    <image src="{{item['profilePhoto']}}" style="width: 4rpx; height: 4rpx;"></image>
                </van-col>
                <van-col offset="2" span="2">
                    <view style="font-family: serif; font-size: 1rpx; font-weight: 300; margin-top: 1rpx;">{{item['name']}}</view>
                </van-col>
                <van-col offset="2" span="3">
                    <view style="font-family: serif; font-size: 1rpx; font-weight: 300; margin-top: 1rpx;">{{item['time']}}</view>
                </van-col>
                <van-col offset="3" span="4">
                    <view style="font-family: serif; font-size: 1rpx; font-weight: 300; margin-top: 1rpx;">
                        <text>标签：</text>
                        <text>快递</text>
                    </view>
                </van-col>
                <van-col offset="1" span="5">
                    <view style="font-family: serif; font-size: 1rpx; font-weight: 300; margin-top: 1rpx;">
                        <text>状态：</text>
                        <text>{{item['state']}}</text>
                    </view>
                </van-col>
            </van-row>

            <van-row>
                <view style="margin: 0 1rpx 2rpx rpx;">
                    <text
                        style="font-family: serif; font-size: 1rpx; line-height: rpx;">{{item['description']}}</text>
                </view>
            </van-row>

            <van-row style="text-align: center;">
                <van-col offset="4" span="6">
                    <button type="default" size="mini" style="width: 100%; font-weight: 500;">接单</button>
                </van-col>
                <van-col offset="4" span="6">
                    <button type="default" size="mini" style="width: 100%; font-weight: 500;">加好友</button>
                </van-col>
            </van-row>
        </view>
    </block>
</view>

<button style="position: fixed; bottom: 0; padding: 0; width: 100%; height: 3rpx; line-height: 3rpx; font-size: 1rpx; background: #888888; color: white;">去下单</button>