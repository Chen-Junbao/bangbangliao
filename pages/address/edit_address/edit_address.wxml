<view style='background: #f8f8f8;'>
  <view style='align-items: center; display: flex; justify-content: center;'><text style='font-size:40rpx'>修改地址</text></view>
</view>

<view style="margin-top: 8rpx; background:#f8f8f8;">
  <view style="padding:8px;margin-left:25rpx">
    <van-row>
     <van-col span="5"><text style="font-size: 40rpx; font-family:Serif;font-weight:bold">联系人</text></van-col>
     <van-col>
      <textarea class="textarea-bg" placeholder='请输入联系人' bindblur='getDataBindTap' auto-height />
     </van-col>
    </van-row>
  </view>
  <van-row gutter="20">
    <van-col offset="7"><van-button plain type="default" size="small">先生</van-button></van-col>
    <van-col><van-button plain type="info" size="small">女士</van-button></van-col>
  </van-row>
  <view style="padding:8px;margin-left:25rpx">
    <van-row>
     <van-col span="5"><text style="font-size: 40rpx; font-family:Serif;font-weight:bold">电话</text></van-col>
     <van-col>
      <textarea class="textarea-bg" placeholder='请输入手机号' bindblur='getDataBindTap' auto-height />
     </van-col>
    </van-row>
  </view>
  <view style="padding:8px;margin-left:25rpx">
    <van-row>
     <van-col span="5"><text style="font-size: 40rpx; font-family:Serif;font-weight:bold">地址</text></van-col>
     <van-col>
      <textarea class="textarea-bg" placeholder='请输入地址信息' bindblur='getDataBindTap' auto-height />
     </van-col>
    </van-row>
  </view>
  <view style="padding-bottom:8px">
  <van-row gutter="20">
    <van-col offset="7"><van-button plain type="info" size="small">宿舍</van-button></van-col>
    <van-col><van-button plain type="default" size="small">教室</van-button></van-col>
    <van-col><van-button plain type="default" size="small">其他</van-button></van-col>
  </van-row>
  </view>
</view>

<view style="margin-top: 4px">
<van-row style="height:20rpx">
  <van-col span="10" offset="1"><button type="warn" size="mini" style='width:100%;height:100%'>删除</button></van-col>
  <van-col span='10' offset="2"><button type="primary" size="mini" style='width:100%;height:100%'>确定</button></van-col>
</van-row>
</view>